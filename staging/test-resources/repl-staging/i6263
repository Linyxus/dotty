scala> import quoted._
scala> import quoted.staging._
scala> implicit def toolbox: Toolbox = Toolbox.make(getClass.getClassLoader)
def toolbox: quoted.staging.Toolbox
scala> def fn[T](using s: Scope)(v : T)(using s.Type[T]) = println("ok")
def fn[T](using s: quoted.Scope)(v: T)(using x$3: s.Type[T]): Unit
scala> usingNewScope { fn("foo") }
ok
scala> usingNewScope { fn((1,2)) }
ok
scala> usingNewScope { fn(1) }
ok
